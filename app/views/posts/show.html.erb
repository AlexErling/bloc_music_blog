<h1><%= @post.title %></h1>

 <%== @post.link %>
 <%= raw(@post.body) %>
 
 <% if current_admin %>
<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", @post, method: :delete, data: {confirm: 'Are you sure you want to delete this post?' } %>
<% end %>


<%= link_to "Back", root_path %>

<%= render partial: 'disqus', locals: {post: @post} %>
